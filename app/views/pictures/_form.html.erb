<% if picture.errors.any? %>
  <div>
    <p><%= pluralize(picture.errors.count, "error") %></p>

    <ul>
      <% picture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(picture) do |f| %>
<p>
  <%= f.label :artist %><br>
  <%= f.text_field :artist %>
</p>

<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :url %><br>
  <%= f.text_field :url %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>
